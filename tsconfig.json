{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "paths": {
            "@src/*": [
                "./src/*",
            ],
            "@config/*": [ // notice the `/*` at the end
                "./config/*",
            ],
        },
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
  }